{
  "name": "Queen_ALYA",
  "description": "Simple WhatsApp Bot",
  "logo": "https://telegra.ph/file/b065f0f673cae5452c358.jpg",
  "keywords": ["STAR-KING0", "ALYA", "Queen_ALYA", "WhatsApp Bot"],
  "success_url": "/",
  "stack": "container",

  "env": {
    "OWNER_NAME": {
      "description": "Name for Bot Owner",
      "value": "Queen_ALYA",
      "required": true
    },
    "WELCOME": {
      "description": "Enable or disable welcome messages (true/false)",
      "value": "false",
      "required": false
    },
    "USER_IMAGES": {
      "description": "URL for menu images",
      "value": "https://telegra.ph/file/b065f0f673cae5452c358.jpg",
      "required": false
    },
    "GOODBYE": {
      "description": "Enable or disable goodbye messages (true/false)",
      "value": "false",
      "required": false
    },
    "MENU": {
      "description": "Select menu style: 1, 2, or 3",
      "value": "1"
    },
    "THUMB_IMAGE": {
      "description": "URL for thumbnail image",
      "value": "https://telegra.ph/file/b065f0f673cae5452c358.jpg"
    },
    "BOT_NAME": {
      "description": "Bot name",
      "value": "Queen_ALYA",
      "required": false
    },
    "TZ": {
      "description": "Time zone (e.g., Africa/Lagos)",
      "value": "Africa/Lagos",
      "required": false
    },
    "READ_COMMAND": {
      "description": "Read bot commands automatically (true/false)",
      "value": "false",
      "required": false
    },
    "WARN_COUNT": {
      "description": "Number of warnings before kick/block",
      "value": "3",
      "required": false
    },
    "AUTO_SAVE_STATUS": {
      "description": "Automatically save WhatsApp status (true/false)",
      "value": "false",
      "required": false
    },
    "HEROKU_API_KEY": {
      "description": "Heroku API key for the app",
      "value": "",
      "required": true
    },
    "HEROKU_APP_NAME": {
      "description": "Heroku app name",
      "value": "",
      "required": true
    },
    "WAPRESENCE": {
      "description": "Presence status: 'unavailable', 'available', 'composing', 'recording', or 'paused'",
      "value": "unavailable",
      "required": false
    },
    "AUTO_READ_STATUS": {
      "description": "Automatically view statuses (true/false)",
      "value": "true",
      "required": false
    },
    "MSGS_IN_LOG": {
      "description": "Log messages (true/false)",
      "value": "false",
      "required": false
    },
    "READ_MESSAGE": {
      "description": "Automatically read all messages (true/false)",
      "value": "false",
      "required": false
    },
    "DISABLE_PM": {
      "description": "Disable bot for private messages (true/false)",
      "value": "false",
      "required": false
    },
    "PREFIX": {
      "description": "Prefix for bot commands (`all | . | .!*`)",
      "value": ".",
      "required": false
    },
    "OWNER_NUMBER": {
      "description": "Owner's phone number(s) in international format, separated by commas",
      "value": "2348100835767",
      "required": false
    },
    "SESSION_ID": {
      "description": "Session ID for the bot",
      "value": "",
      "required": false
    },
    "MODE": {
      "description": "Bot mode: 'public' or 'private'",
      "value": "public",
      "required": false
    },
    "PACK_NAME": {
      "description": "Sticker pack name",
      "value": "Queen_ALYA",
      "required": false
    },
    "PACK_AUTHER": {
      "description": "Sticker author name",
      "value": "A L Y A",
      "required": false
    }
  },
  
  "addons": [
    {
      "plan": "heroku-postgresql:basic"
    }
  ],

  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "https://github.com/carlosdommor/heroku-buildpack-ffmpeg-latest"
    }
  ]
}